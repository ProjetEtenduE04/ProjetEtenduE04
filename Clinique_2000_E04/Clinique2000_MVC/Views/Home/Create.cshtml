@model Patient

@{

    var btnText = Locals["btnText"];

    ViewData["Title"] = Locals["Titre1"];

}

<div class="container-fluid">

    <div class="row justify-content-around text-center">

        <div class="col col-lg-10 col-xl-9">

            <div>

                <h1 class="h0">@Locals["Titre2"]</h1>

                <div class="divider-2 mb-3 "></div><!--devider linear gradient cian-->

                <p class="p1">

                    @Locals["SousTitre1"] <br />

                    <span class="p3">@Locals["SousTitre2"]</span>

                </p>

            </div>


            <!--Form d'inscription patient-->

            <form asp-controller="Patients" asp-action="Create" method="post" enctype="multipart/form-data" class="text-start p1">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <!--region input Hidden-->

                <input asp-for="@Model.UserId" class="form-control" type="hidden" />

                <!--Nom Patient-->

                <div class="row justify-content-center">

                    <div class="col col-md-8 col-lg-7 col-xl-6 ">

                        <label asp-for="@Model.Nom" class="form-label mt-3 mb-1"></label>

                        <input type="text" class="form-control capitalize-first-letter" asp-for="@Model.Nom" id="nomPatient" placeholder=@Locals["PlaceHolderNom"]>

                        <span asp-validation-for="@Model.Nom" class="text-danger"></span>

                    </div>

                </div>

                <!--Prenom Patient-->

                <div class="row justify-content-center">

                    <div class="col col-md-8 col-lg-7 col-xl-6 ">

                        <label asp-for="@Model.Prenom" class="form-label mt-3 mb-1"></label>

                        <input type="text" class="form-control capitalize-first-letter" asp-for="@Model.Prenom" placeholder=@Locals["PlaceHolderPrenom"]>

                        <span asp-validation-for="@Model.Prenom" class="text-danger"></span>

                    </div>

                </div>

                <!--Genre-->

                <div class="row justify-content-center">

                    <div class="col col-md-8 col-lg-7 col-xl-6">

                        <label asp-for="@Model.Genre" class="form-label mt-3 mb-1"></label>

                        <select class="form-select" asp-for="@Model.Genre" aria-label="Genre">

                            <option selected value="">@Locals["ChampGenreOptions"]</option>

                            <option selected value="Féminine">@Locals["ChampGenreFeminin"]</option>

                            <option selected value="Masculin">@Locals["ChampGenreMasculin"]</option>

                        </select>

                        <span asp-validation-for="@Model.Genre" class="text-danger"></span>

                    </div>

                </div>

                <!--NAM-->

                <div class="row justify-content-center">

                    <div class="col col-md-8 col-lg-7 col-xl-6 ">

                        <label asp-for="@Model.NAM" class="form-label mt-3 mb-1"></label>

                        <input type="text" class="form-control" asp-for="@Model.NAM" placeholder=@Locals["PlaceHolderNAM"]>

                        <span asp-validation-for="@Model.NAM" class="text-danger"></span>

                    </div>

                </div>

                <!--La date de naissance-->

                <div class="row justify-content-center">

                    <div class="col col-md-8 col-lg-7 col-xl-6 ">

                        <label asp-for="@Model.DateDeNaissance" class="form-label mt-3 mb-1"></label>

                        @{

                            string formattedDate = Model.DateDeNaissance == DateTime.MinValue ? null : Model.DateDeNaissance.ToString("yyyy-MM-dd");

                        }

                        <input id="DateDeNaissance" class="form-control" asp-for="@Model.DateDeNaissance" value="@formattedDate" type="date" min="1900-01-01" max="@DateTime.Now.AddYears(-14).ToString("yyyy-MM-dd")">

                        <span asp-validation-for="@Model.DateDeNaissance" class="text-danger"></span>

                    </div>

                </div>

                <!--Code Postal-->

                <div class="row justify-content-center">

                    <div class="col col-md-8 col-lg-7 col-xl-6 ">

                        <label asp-for="@Model.CodePostal" class="form-label mt-3 mb-1"></label>

                        <input type="text" class="form-control" asp-for="@Model.CodePostal" placeholder=@Locals["PlaceHolderPostal"]>

                        <span asp-validation-for="@Model.CodePostal" class="text-danger"></span>

                    </div>

                </div>

                <!--CreateBTN-->

                <div class="row justify-content-center text-center">

                    <div class="col col-md-8 col-xl-6 mb-2 mt-4">

                        <partial name="_SubmitButtonPartial" model="@btnText" />

                    </div>

                </div>

                <div class="row justify-content-center text-center">

                    <div class="col col-md-8 col-xl-6 my-2">

                        <partial name="_ResetButtonPartial" />

                    </div>

                </div>

            </form>

        </div>

    </div>

</div>

@section Scripts {

    @{

        await Html.RenderPartialAsync("_ValidationScriptsPartial");

    }

}