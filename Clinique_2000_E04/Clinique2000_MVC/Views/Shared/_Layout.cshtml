<!-- Chatbox with Toggle Button -->
<div id="chatbox-container">
    <div id="chatbox-toggle" onclick="toggleChat()">
        <span>FAQ</span>
        <i class="fa fa-arrow-up" aria-hidden="true"></i>
    </div>

    <div id="chatbox" class="chatbox">
        <div class="chatbox-header">Aidez nous à vous aider</div>
        <div class="chatbox-messages">
            <!-- Dynamically added messages will appear here -->
        </div>
        <div class="chatbox-questions">
            <button onclick="postQuestion(1)">Dois-je m'enregisterer en tant que patient pour prendre rendez-vous ?</button>
            <button onclick="postQuestion(2)">Comment est ce que je prends rendez-vous dans une clinique ?</button>
            <button onclick="postQuestion(3)">Comment est ce que j'annule un rendez-vous ?</button>
            <!-- Additional questions here -->
        </div>
    </div>
</div>


