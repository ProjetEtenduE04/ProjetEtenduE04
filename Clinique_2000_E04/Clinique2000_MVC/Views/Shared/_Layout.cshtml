<!-- Chatbox with Toggle Button -->
<div id="chatbox-container">
    <div id="chatbox-toggle" onclick="toggleChat()">
        <span>FAQ</span>
        <i class="fa fa-arrow-up" aria-hidden="true"></i>
    </div>

    <div id="chatbox" class="chatbox">
        <div class="chatbox-header">How can we help you?</div>
        <div class="chatbox-messages">
            <!-- Dynamically added messages will appear here -->
        </div>
        <div class="chatbox-questions">
            <button onclick="postQuestion(1)">Question 1</button>
            <button onclick="postQuestion(2)">Question 2</button>
            <button onclick="postQuestion(3)">Question 3</button>
            <!-- Additional questions here -->
        </div>
    </div>
</div>


