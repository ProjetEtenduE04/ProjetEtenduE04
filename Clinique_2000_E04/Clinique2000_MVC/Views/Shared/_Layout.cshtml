<script>

    function toggleChat() {
        var chatbox = document.getElementById("chatbox");
        var messages = document.querySelector('.chatbox-messages');
        var questions = document.querySelector('.chatbox-questions');

        chatbox.classList.toggle("expanded");
        if (chatbox.classList.contains("expanded")) {
            messages.style.display = 'block';
            questions.style.display = 'block';
        } else {
            messages.style.display = 'none';
            questions.style.display = 'none';
        }

        var toggleIcon = document.querySelector("#chatbox-toggle i");
        if (chatbox.classList.contains("expanded")) {
            toggleIcon.classList.remove("fa-arrow-up");
            toggleIcon.classList.add("fa-arrow-down");
        } else {
            toggleIcon.classList.remove("fa-arrow-down");
            toggleIcon.classList.add("fa-arrow-up");
        }
    }

    function postQuestion(questionId) {
        var messages = document.querySelector('.chatbox-messages');
        var question = '';
        var answer = '';

        // Define your questions and answers
        switch (questionId) {
            case 1:
                question = 'What is Question 1?';
                answer = 'This is the answer to Question 1.';
                break;
            case 2:
                question = 'What is Question 2?';
                answer = 'This is the answer to Question 2.';
                break;
            case 3:
                question = 'What is Question 3?';
                answer = 'This is the answer to Question 3.';
                break;
            // Add more cases as needed
        }

        // Add the question and answer to the messages div
        messages.innerHTML += '<div><strong>You:</strong> ' + question + '</div>';
        messages.innerHTML += '<div><strong>Bot:</strong> ' + answer + '</div>';

        // Scroll to the bottom
        messages.scrollTop = messages.scrollHeight;
    }
</script>
