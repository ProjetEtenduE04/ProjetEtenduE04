<script>

    function toggleChat() {
        var chatbox = document.getElementById("chatbox");
        var toggleButton = document.getElementById("chatbox-toggle");

        // Toggle the chatbox visibility
        chatbox.style.display = chatbox.style.display === "block" ? "none" : "block";

        // Toggle the opened class for toggle button
        toggleButton.classList.toggle("opened");
    }

    var lastBg = 2; // Start with 2 so the first one will be 1

    function postQuestion(questionId) {
        var messages = document.querySelector('.chatbox-messages');
        var question = '';
        var answer = '';

        // Define your questions and answers
        switch (questionId) {
            case 1:
                question = 'Dois-je m\'enregistrer en tant que patient pour prendre rendez-vous ?';
                answer = 'Oui, vous devez cliquer sur la section "Patient" dans notre en-tête de page, puis sélectionner "Créer le dossier". Vous serez alors redirigé vers notre formulaire d\'inscription.';
                break;
            case 2:
                question = 'Comment puis-je prendre rendez-vous dans une clinique ?';
                answer = 'Pour prendre rendez-vous, vous devez cliquer sur la section "Clinique" dans notre en-tête de page, puis sur "Cliniques à proximité". Vous serez alors redirigé vers une liste des 5 cliniques les plus proches de chez vous ayant de la disponibilité. Ensuite, vous devez choisir la clinique qui vous convient le mieux en cliquant sur "Voir la liste d\'attente". Finalement, vous devez sélectionner la consultation qui vous convient le mieux parmi celles disponibles en cliquant sur "Réserver".';
                break;
            case 3:
                question = 'Comment puis-je annuler un rendez-vous ?';
                answer = 'Pour annuler un rendez-vous, vous devez cliquer sur la section "Patient" dans notre en-tête de page, puis sur "Mon profil". Vous serez alors redirigé vers la page de votre profil, où vous trouverez un bouton "Annuler" si vous avez un rendez-vous réservé. Si le bouton "Annuler" est affiché, cliquez dessus puis confirmez l\'annulation de votre rendez-vous.';
                break;
            case 4:
                question = 'En tant que patient, comment puis-je modifier mes informations ?';
                answer = 'Pour modifier vos informations, vous devez cliquer sur la section "Patient" dans notre en-tête de page, puis sur "Mon profil". Vous serez alors redirigé vers la page de votre profil. Cliquez ensuite sur le bouton vert "Modifier". Vous serez redirigé vers un formulaire contenant les informations précédemment entrées. À ce moment, vous pouvez modifier les champs à votre guise, puis appuyer sur "Enregistrer pour confirmer les changements."';
                break;
        }

        // Toggle the background color
        lastBg = lastBg === 1 ? 2 : 1;
        var questionDiv = document.createElement('div');
        questionDiv.classList.add('question-response', `bg-color-${lastBg}`);
        questionDiv.innerHTML = `<strong>You:</strong> ${question}`;
        messages.appendChild(questionDiv);

        var answerDiv = document.createElement('div');
        answerDiv.classList.add('question-response', `bg-color-${lastBg}`);
        answerDiv.innerHTML = `<strong>Bot:</strong> ${answer}`;
        messages.appendChild(answerDiv);

        // Ensure the latest entry is visible
        messages.scrollTop = messages.scrollHeight;
    }
</script>
