<div id="chatbox-container" class="animate__animated animate__fadeInBottomLeft">
    <div id="chatbox-toggle" onclick="toggleChat()">
        <div class="chat-icon">
            <i class="fas fa-comment-dots"></i> <!-- FontAwesome Chat Icon -->
        </div>
    </div>

    <div id="chatbox" class="chatbox">
        <div class="chatbox-header">
            Aidez-nous à vous aider 
            <span id="chatbox-close" class="chatbox-close" onclick="toggleChat()">&times;</span> <!-- Close Button -->
        </div>
        <div class="chatbox-messages"> </div>

        <div class="chatbox-questions">
            <button onclick="postQuestion(1)">Dois-je m'enregistrer en tant que patient pour prendre rendez-vous ?</button>
            <button onclick="postQuestion(2)">Comment puis-je prendre rendez-vous dans une clinique ?</button>
            <button onclick="postQuestion(3)">Comment puis-je annuler un rendez-vous ?</button>
            <button onclick="postQuestion(4)">En tant que patient, comment puis-je modifier mes informations ?</button>
        </div>
    </div>
</div>

