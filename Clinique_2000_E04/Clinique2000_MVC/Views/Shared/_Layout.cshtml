<script>

    function toggleChat() {
        var chatbox = document.getElementById("chatbox");
        var messages = document.querySelector('.chatbox-messages');
        var questions = document.querySelector('.chatbox-questions');

        chatbox.classList.toggle("expanded");
        if (chatbox.classList.contains("expanded")) {
            messages.style.display = 'block';
            questions.style.display = 'block';
        } else {
            messages.style.display = 'none';
            questions.style.display = 'none';
        }

        var toggleIcon = document.querySelector("#chatbox-toggle i");
        if (chatbox.classList.contains("expanded")) {
            toggleIcon.classList.remove("fa-arrow-up");
            toggleIcon.classList.add("fa-arrow-down");
        } else {
            toggleIcon.classList.remove("fa-arrow-down");
            toggleIcon.classList.add("fa-arrow-up");
        }
    }

    var lastBg = 2; // Start with 2 so the first one will be 1

    function postQuestion(questionId) {
        var messages = document.querySelector('.chatbox-messages');
        var question = '';
        var answer = '';

        // Define your questions and answers
        switch (questionId) {
            case 1:
                question = 'Dois-je m\'enregisterer en tant que patient pour prendre rendez-vous ?';
                answer = 'Oui, vous devez appuyer sur la section "Patient" de notre entête de page, puis selectionner "Créer le dossier. Vous serez donc redirigé vers notre formulaire d\'inscription"';
                break;
            case 2:
                question = 'Comment est ce que je prends rendez-vous dans une clinique ?';
                answer = 'Afin de prendre rendez-vous, vous devez appuyer sur la section "Clinique" de notre entête de page, puis sur "Cliniques à proximité". Vous serez donc redirigé vers une liste des 5 cliniques les plus près de chez vous qui ont de la disponibilité. Par la suite, vous devez choisir la clinique qui vous convient le mieux, en appuyant sur "Voir la liste d\'attente". Finalement, vous devez choisir la consultation qui vous convient le mieux, parmis celles qui sont disponibles, en appuyant sur "Reserver."';
                break;
            case 3:
                question = 'Comment est ce que j\'annule un rendez-vous ? ';
                answer = 'Pour annuler un rendez-vous, vous devez appuyer sur la section "Patient" de notre entête de page, puis sur "Mon profil". Vous serez donc redirigé vers la page de votre profil, dans laquelle vous trouverez un bouton "Annuler", ou un bouton "Prendre un rendez-vous", dépendamment de si vous avez un rendez-vous réservé ou non. Dans l\'éventualité où le bouton annulé est présent,  ';
                break;
            // Add more cases as needed
        }

        // Toggle the background color
        lastBg = lastBg === 1 ? 2 : 1;
        var questionDiv = document.createElement('div');
        questionDiv.classList.add('question-response', `bg-color-${lastBg}`);
        questionDiv.innerHTML = `<strong>You:</strong> ${question}`;
        messages.appendChild(questionDiv);

        var answerDiv = document.createElement('div');
        answerDiv.classList.add('question-response', `bg-color-${lastBg}`);
        answerDiv.innerHTML = `<strong>Bot:</strong> ${answer}`;
        messages.appendChild(answerDiv);

        // Ensure the latest entry is visible
        messages.scrollTop = messages.scrollHeight;
    }
</script>
