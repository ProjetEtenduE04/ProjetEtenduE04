@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<style>
    #left-side-register {
        background-color: #5D8CCB;
        color: white;
        border-radius: 30px 0px 0px 30px;
        height: 596px;
    }

    #right-side-register {
        background-color: #C5D6EC;
        border-radius: 0px 30px 30px 0px;
        padding-left: 10%;
        padding-right: 10%;
        padding-top: 40px;
        padding-bottom: 40px;
    }

    #contenue {
        padding-top: 80px;
        padding-bottom: 80px;
    }

    #boutonGoogle {
        background-color: #C5D6EC;
        border: 1px solid black;
        padding-top: 10px; 
        padding-bottom: 10px;
        padding-left: 20px;
        padding-right: 20px;
        border-radius: 10px;
    }

    #boutonCreer {
        background-color: #5D8CCB;
        color: white;
        padding-top: 10px; 
        padding-bottom: 10px;
        padding-left: 20px;
        padding-right: 20px;
        border-radius: 10px;
        width: 100%;
    }

    #dejaCompte{
        color: darkgrey;
    }
</style>

<div class="container" id="contenue">
    <div class="row justify-content-center align-items-center">
        <div class="col-4" id="left-side-register">
            <img src="/images/medicaltool.png" height="300px" width="300px"/>
        </div>
        <div class="col-8" id="right-side-register">
            <h1 style="margin-bottom: 20px">Créer votre compte</h1>
            <button id="boutonGoogle" style="margin-bottom: 20px"><i class="fa-brands fa-google" style="margin-right: 15px"></i>S'enregistrer avec Google</button>
            <p style="margin-bottom: 20px; text-align: center">-OU-</p>
            <div class="form-floating" style="margin-bottom: 20px">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating" style="margin-bottom: 20px">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.Password"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating" style="margin-bottom: 20px">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.ConfirmPassword"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button id="boutonCreer" style="margin-bottom: 20px">Créer Compte</button>
            <p id="dejaCompte">Avez vous déjà un compte? <a style="color:#5D8CCB">Se connecter</a></p>
        </div>
    </div>
</div>







