@model IEnumerable<Clinique2000_Core.Models.ListeAttente>


<div class="container">
    <h1 class="text-center" style="margin: 50px 0">Liste d'attente de Clinique: @ViewBag.CliniqueName</h1>
@* Pour filtre selon etat
    <div>
        <form action="" method="post" class="form-inline mb-3">
            <label class="mr-2">Filter:</label>
            <select name="isOuvert" class="form-control mr-2">
                <option value="true">Ouvert</option>
                <option value="false">Fermé</option>
            </select>
            <button type="submit" class="btn btn-primary">Filter</button>
        </form>
    </div>*@

            <div class="row" style="margin-bottom: 50px">
                @foreach (var item in Model)
                {

                    <div class="col-md-4 ">
                        <div class="card mb-3">

                            <div class="card-header">
                                Liste d'attente du @Html.DisplayFor(model => item.DateEffectivite)

                            </div>

                            <div class="card-body " style="color:black">
                                <p class="card-text text-start">Date Effectivite: @Html.DisplayFor(modelItem => item.DateEffectivite)</p>
                                <p class="col-sm-8" style="color: @(item.IsOuverte ? "green" : "red");">
                                    @(item.IsOuverte ? "Ouverte" : "Fermée")
                                </p>

                            </div>
                            <div class="card-footer">
                                <a asp-action="Details" asp-controller="ListeAttente" asp-route-id="@item.ListeAttenteID" class="btn btn-secondaire btn-sm" style="width:auto">Details de la fille d'attente</a>
                            </div>




                        </div>
                    </div>
                }
            </div>
        </div>
        <script>
    $(document).ready(function () {
        $('#filterOpenLists').on('click', function () {
            window.location.href = '@Url.Action("ListeAttentePourPatient", new { clinicId = ViewBag.ClinicId, isOuvert = true })';
        });
    });
</script>