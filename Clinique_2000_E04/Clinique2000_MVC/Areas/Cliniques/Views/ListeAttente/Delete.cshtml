@model ListeAttente
@{
    var btnText = "Supprimer la liste";
}
<div class="container mt-3">
    <h4 class="text-center mb-4">Suppression de la Liste d'Attente</h4>
    <hr />

    <p class="text-center text-danger font-weight-bold mb-4" style="font-size: 1.25rem;">
        Êtes-vous certain de vouloir supprimer cette liste d'attente ?
    </p>

    <div class="card">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.IsOuverte)
                </dt>
                <dd class="col-sm-10">
                    @if (Model.IsOuverte)
                    {
                        <span class="badge bg-success">Ouverte</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Fermée</span>
                    }
                </dd>

                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ListeAttenteID)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ListeAttenteID)
                </dd>

                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.DateEffectivite)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.DateEffectivite)
                </dd>

                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.HeureOuverture)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.HeureOuverture)
                </dd>

                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.HeureFermeture)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.HeureFermeture)
                </dd>

                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.NbMedecinsDispo)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.NbMedecinsDispo)
                </dd>
            </dl>
        </div>
    </div>

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger">
            <ul>
                @foreach (var error in ViewData.ModelState.Values.SelectMany(modelState => modelState.Errors))
                {
                    <li>@error.ErrorMessage</li>
                }
            </ul>
        </div>
    }

    <form asp-action="Delete" method="post" class="mt-4 text-center">
        <input type="hidden" asp-for="ListeAttenteID" />
        <input type="hidden" asp-for="DateEffectivite" />
        <input type="hidden" asp-for="HeureOuverture" />
        <input type="hidden" asp-for="HeureFermeture" />
        <input type="hidden" asp-for="IsOuverte" />
        <input type="hidden" asp-for="NbMedecinsDispo" />
        @*<input type="hidden" asp-for="DureeConsultationMinutes" />*@
        <input type="hidden" asp-for="CliniqueID" />
        <input type="hidden" asp-for="ListeAttenteID" />
        <div class="row justify-content-center text-center">
            <div class="col col-md-8 col-xl-6 mb-2 mt-4">
                <partial name="_SubmitDeleteButtonPartial" model="@btnText" />
            </div>
        </div>

        <div class="row justify-content-center text-center">
            <div class="col col-md-8 col-xl-6 my-2">
                <a asp-action="Index" class="smBtn button-white-action">Annuler</a>
            </div>
        </div>
    </form>
</div>






