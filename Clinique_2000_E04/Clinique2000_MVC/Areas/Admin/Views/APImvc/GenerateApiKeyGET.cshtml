
<head>
 
    <title>Générer une clé API</title>

</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 mt-5 mb-5">
                <div class="card" style="height: 400px;">
                    <!-- Adjusted height -->
                    <div class="card-body d-flex flex-column align-items-center justify-content-center text-center">
                        <h1 class="card-title">Générer une clé API</h1>
                        <p class="card-text">Votre clé API :</p>
                        <div id="apiKey" class="card-text">@Model</div>
                        <button class="smBtn button-green-action mt-5 narrow-button" onclick="copyApiKey()" style="font-size: 16px;">Copier la clé API</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS and dependencies -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <script>
        function copyApiKey() {
            var apiKeyElement = document.getElementById("apiKey");
            var apiKey = apiKeyElement.innerText;

            var dummyTextArea = document.createElement("textarea");
            dummyTextArea.value = apiKey;
            document.body.appendChild(dummyTextArea);

            dummyTextArea.select();
            document.execCommand("copy");
            document.body.removeChild(dummyTextArea);

            alert("Clé API copiée dans le presse-papiers : " + apiKey); 
                }
    </script>
</body>
