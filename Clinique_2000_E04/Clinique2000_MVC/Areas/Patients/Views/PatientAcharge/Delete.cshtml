@model Clinique2000_Core.Models.PatientACharge

@{
    ViewData["Title"] = "Supprimer";
    var btnText = "Supprimer définitivement";
}

<div class="container" style="max-width: 1080px; margin-top: 50px;">
    <h1 class="text-center">Supprimer le patient à charge</h1>

    <h3 style="margin: 20px 0;">Êtes-vous sûr de vouloir supprimer ce profil de patient à charge ?</h3>
    <div>
        <h4>Patient à charge : @Model.Nom, @Model.Prenom</h4>
        <hr />
        <dl class="row p1">
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Nom)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Nom)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Prenom)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Prenom)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Genre)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Genre)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.NAM)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.NAM)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.DateDeNaissance)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.DateDeNaissance)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Age)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Age)
            </dd>
        </dl>
        <form asp-controller="PatientAcharge" asp-action="DeleteConfirmed" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" name="id" value="@Model.PatientAChargeId" />            <!--DeleteBTN-->
            <div class="row justify-content-center text-center">
                <div class="col col-md-8 col-xl-6 mb-2 mt-4">
                    <button type="submit" class="button-red-action">
                        <span id="btntextDelete">Supprimer définitivement</span>
                        <i class="fa-solid fa-trash"></i>
                    </button>
                </div>
            </div>

        </form>
    </div>
</div>