@model Clinique2000_Core.Models.PatientACharge

@{
    var btnText = "Enregistrer";
    ViewData["Title"] = "Ajouter un enfant à charge";
}

<div class="container-fluid">
    <div class="row justify-content-around text-center">
        <div class="col col-lg-10 col-xl-9">
            <div>
                <h1 class="h0" style="margin-top:50px">Renseignements Obligatoires</h1>
                <div class="divider-2 mb-3 "></div><!--devider linear gradient cian-->

                <p class="p1">
                    Veuillez compléter ces informations <br />
                    <span class="p3">Les champs marqués d'un astérisque (<span class="champs-obligatoires">*</span>) doivent être renseignés.</span>
                </p>
            </div>
           
            <!--Form for creating PatientACharge-->
            <form asp-controller="PatientAcharge" asp-action="Create" method="post" enctype="multipart/form-data" class="text-start p1">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <!--Hidden input for PatientId-->
                <input type="hidden" id="PatientId" name="PatientId" value="@ViewBag.PatientId" />

                <!--Nom-->
                <div class="row justify-content-center">
                    <div class="col col-md-8 col-lg-7 col-xl-6 ">
                        <label asp-for="@Model.Nom" class="form-label mt-3 mb-1">Nom<span class="champs-obligatoires"> *</span></label>
                        <input type="text" class="form-control form-control-lg capitalize-first-letter" asp-for="@Model.Nom" placeholder="Exemple: Jhon">
                        <span asp-validation-for="@Model.Nom" class="text-danger"></span>
                    </div>
                </div>

                <!--Prenom-->
                <div class="row justify-content-center">
                    <div class="col col-md-8 col-lg-7 col-xl-6 ">
                        <label asp-for="@Model.Prenom" class="form-label mt-3 mb-1">Prenom<span class="champs-obligatoires"> *</span></label>
                        <input type="text" class="form-control form-control-lg capitalize-first-letter" asp-for="@Model.Prenom" placeholder="Exemple: Smith">
                        <span asp-validation-for="@Model.Prenom" class="text-danger"></span>
                    </div>
                </div>

                <!--Genre-->
                <div class="row justify-content-center">
                    <div class="col col-md-8 col-lg-7 col-xl-6">
                        <label asp-for="@Model.Genre" class="form-label mt-3 mb-1">Genre<span class="champs-obligatoires"> *</span></label>
                        <select class="form-select form-select-lg" asp-for="@Model.Genre" aria-label="Genre">
                            <option selected value="">Choisissez parmi les options proposées</option>
                            <option value="Féminine">Féminine</option>
                            <option value="Masculin">Masculin</option>
                        </select>
                        <span asp-validation-for="@Model.Genre" class="text-danger"></span>
                    </div>
                </div>

                <!--NAM-->
                <div class="row justify-content-center">
                    <div class="col col-md-8 col-lg-7 col-xl-6 ">
                        <label asp-for="@Model.NAM" class="form-label mt-3 mb-1">NAM<span class="champs-obligatoires"> *</span></label>
                        <input type="text" class="form-control form-control-lg" asp-for="@Model.NAM" placeholder="Exemple: CULA-1234-5678">
                        <span asp-validation-for="@Model.NAM" class="text-danger"></span>
                    </div>
                </div>

                <!--Date de naissance-->
                <div class="row justify-content-center">
                    <div class="col col-md-8 col-lg-7 col-xl-6 ">
                        <label asp-for="@Model.DateDeNaissance" class="form-label mt-3 mb-1">Date de naissance<span class="champs-obligatoires"> *</span></label>
                        <input id="" class="form-control form-control-lg" asp-for="@Model.DateDeNaissance" type="date" min="@DateTime.Now.AddYears(-14).ToString("yyyy-MM-dd")" max="@DateTime.Now.ToString("yyyy-MM-dd")">
                        <span asp-validation-for="@Model.DateDeNaissance" class="text-danger"></span>
                    </div>
                </div>

            

                <!--Create Button-->
                <div class="row justify-content-center text-center">
                    <div class="col col-md-8 col-xl-6 mb-2 mt-4">
                        <button type="submit" class="btn btn-primary btn-lg">@btnText</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
