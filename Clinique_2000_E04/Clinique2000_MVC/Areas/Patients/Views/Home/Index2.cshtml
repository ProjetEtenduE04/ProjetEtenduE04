@{
    ViewData["Title"] = "Index";
}


<div class="container text-center">
    <div class="row justify-content-center" style="margin:50px 0">
        <div class="col-6 col-sm-3">
            <a asp-area="Patients" asp-controller="Patients" asp-action="Index" class="btn btn-create form-control" style="width:270px">
                <span id="btntextCreate1">
                    Voir tous les patients (Liste des patients)
                </span>
                <i class=""></i>
            </a>
        </div>
        <div class="col-6 col-sm-3">
            <a asp-area="Patients" asp-controller="Patients" asp-action="Create" class="btn btn-create form-control" style="width:270px">
                <span id="btntextCreate2">
                    S'inscrire comme patient
                </span>
                <i class=""></i>
            </a>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
