@model Patient

@{
    ViewData["Title"] = "Delete";
    var btnText = "Supprimer définitivement";
}

<div class="container" style="max-width: 1080px; margin-top: 50px;">
    <h1 class="text-center">Supprimer</h1>

    <h3 style="margin: 20px 0;">Êtes-vous sûr de vouloir supprimer ce profil ?</h3>
    <div>
        <h4>Patient : @Model.Nom, @Model.Prenom</h4>
        <hr />
        <dl class="row p1">
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Nom)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Nom)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Prenom)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Prenom)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Genre)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Genre)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.NAM)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.NAM)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.CodePostal)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.CodePostal)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.DateDeNaissance)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.DateDeNaissance)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Age)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Age)
            </dd>
            @*        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserId)
            </dt>
            <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserId)
            </dd>*@
        </dl>
        <form asp-action="Delete" method="post">
            <input asp-for="@Model.PatientId" class="form-control" type="hidden" />
            <!--DeleteBTN-->
            <div class="row justify-content-center text-center">
                <div class="col col-md-8 col-xl-6 mb-2 mt-4">
                    <partial name="_SubmitDeleteButtonPartial" model="@btnText"  />
                </div>
            </div>

            <div class="row justify-content-center text-center" style="margin-bottom:40px">
                <div class="col col-md-8 col-xl-6 my-2">
                    <a asp-action="Index" class="smBtn button-white-action">Retour à la liste</a>

                </div>
            </div>


        </form>
    </div>
</div>